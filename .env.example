# Docker Compose Environment Variables
# Copy this file to .env and update with your values

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_this_password
POSTGRES_DB=gmao_db

# Backend Configuration
NODE_ENV=development
JWT_SECRET=change_this_to_a_random_256_bit_secret
JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGIN=http://localhost:3010

# Database Connection (for backend service)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=gmao_db
DB_USER=postgres
DB_PASSWORD=change_this_password

# Optional: Ollama Configuration (if using AI features)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama2
OLLAMA_TIMEOUT=30000

# Optional: Whisper Configuration (if using transcription)
WHISPER_URL=http://localhost:8000
WHISPER_TIMEOUT=300000
