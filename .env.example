# Docker Compose Environment Variables
# Copy this file to .env and update with your values

# PostgreSQL Configuration
# IMPORTANT: Use strong, unique passwords in production
# Generate with: openssl rand -base64 32
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=gmao_db

# Backend Configuration
NODE_ENV=development
# Generate secure JWT secret with: openssl rand -hex 64
# Must be at least 64 characters (256 bits)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-64-chars
JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGIN=http://localhost:3010

# Frontend API URL (for production builds)
# Set to your backend URL when building the frontend
REACT_APP_API_URL=http://localhost:5010

# Database Connection (for backend service)
# IMPORTANT: Must match POSTGRES_PASSWORD above
DB_HOST=postgres
DB_PORT=5432
DB_NAME=gmao_db
DB_USER=postgres
DB_PASSWORD=postgres

# Optional: Ollama Configuration (if using AI features)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama2
OLLAMA_TIMEOUT=30000

# Optional: Whisper Configuration (if using transcription)
WHISPER_URL=http://localhost:8000
WHISPER_TIMEOUT=300000
